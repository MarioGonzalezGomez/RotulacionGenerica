<Page
    x:Class="Generico_Front.Views.PremiosPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:Models="using:Generico_Front.Models" 
    xmlns:viewmodels="using:Generico_Front.ViewModels" xmlns:muxc="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    mc:Ignorable="d">

    <Page.DataContext>
        <viewmodels:PremiosViewModel/>
    </Page.DataContext>

    <Page.Resources>

    </Page.Resources>

    <Grid x:Name="ContentArea">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TreeView  Margin="0,0,0,15">
        </TreeView>

        <Grid Grid.Column="1" Margin="10,10,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.9*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="0.4*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.3*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock  Grid.Row="0" Style="{ThemeResource BaseTextBlockStyle}">Filtrar por...</TextBlock>
                <TextBox x:Name="FiltradoPorPremio"  Grid.Row="1" Margin="0,5,0,0"  HorizontalAlignment="Stretch" Header="Cargo" TextChanged="FiltradoPorPremio_TextChanged"/>
                <TextBox x:Name="FiltradoPorPersona"  Grid.Row="2" Margin="0,5,0,0"  HorizontalAlignment="Stretch" Header="Persona" TextChanged="FiltradoPorPersona_TextChanged"/>
            </Grid>
            <Grid Grid.Row="1" Margin="0,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.2*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>

                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <ToggleSwitch x:Name="tggEditor" OffContent="Añadir/Editar Off" OnContent="Añadir/Editar On" IsOn="False" Toggled="tggEditor_Toggled"/>
                </StackPanel>
                <StackPanel x:Name="stckEditior0" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Stretch" Visibility="Collapsed">
                    <TextBlock Style="{ThemeResource BaseTextBlockStyle}" Margin="0,7,20,0">Selector de ruta</TextBlock>
                </StackPanel>
                <StackPanel x:Name="stckEditior1" Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center" Visibility="Collapsed">
                    <Button x:Name="filePicker"  HorizontalAlignment="Left" VerticalAlignment="Stretch" Click="filePicker_Click">
                        <Button.Content>
                            <FontIcon Glyph="&#xEC50;" FontFamily="Segoe MDL2 Assets" FontSize="20"/>
                        </Button.Content>
                    </Button>
                    <TextBox x:Name="txtRuta" HorizontalAlignment="Left" TextChanged="txtRuta_TextChanged"/>
                </StackPanel>
                <StackPanel x:Name="stckEditior2" Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Visibility="Collapsed">
                    <Button  x:Name="btnEliminarPremio" Click="btnEliminarPremio_Click">
                        <SymbolIcon Symbol="Delete"/>
                    </Button>
                    <Button  x:Name="btnModificarPremio" Margin="10,0,0,0" Click="btnModificarPremio_Click">
                        <SymbolIcon Symbol="Edit"/>
                    </Button>
                    <Button  x:Name="btnGuardarPremio" Margin="10,0,0,0" Click="btnGuardarPremio_Click">
                        <SymbolIcon Symbol="Add"/>
                    </Button>
                    <muxc:TeachingTip x:Name="TipAddNuevoPremio"
                    Title="Añadido con éxito al final de la lista"
                    CloseButtonContent="Salir"
                    Target="{x:Bind btnGuardarPremio}"
                    Closed="TipAddNuevoPremio_Closed"
                    IsLightDismissEnabled="True">
                        <muxc:TeachingTip.IconSource>
                            <SymbolIconSource Symbol="Accept"  Foreground="Green"/>
                        </muxc:TeachingTip.IconSource>
                    </muxc:TeachingTip>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="2" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="btnPlay" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MinHeight="50" MaxHeight="100" Margin="0,0,10,0" Click="btnPlay_Click">
                    <Button.Content>
                        <FontIcon x:Name="iconPlay" Glyph="&#xE768;" FontFamily="Segoe MDL2 Assets" FontSize="40" Foreground="Green"/>
                    </Button.Content>
                </Button>
                <Button x:Name="btnStop" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MinHeight="50" MaxHeight="100"  Margin="10,0,0,0" Click="btnStop_Click">
                    <Button.Content>
                        <FontIcon Glyph="&#xE71A;" FontFamily="Segoe MDL2 Assets" FontSize="35" Foreground="#FFB22222"/>
                    </Button.Content>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Page>
    

